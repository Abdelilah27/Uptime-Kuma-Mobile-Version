<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UptimeKuma" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_bar_color</item>
        <item name="colorPrimaryVariant">@color/main_text_splash_fragment</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bar_title_bienvenue_fragment">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_text_bienvenue_fragment">
        <item name="autoSizeTextType">uniform</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="main_button_bienvenue_fragment">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/main_text_splash_fragment</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="main_button_different_size_bienvenue_fragment">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/main_text_splash_fragment</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="status_text_fragment">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/main_text_item_all_server_fragment</item>
    </style>

    <style name="title_edit_text_add_statue_fragment">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_text_item_all_server_fragment</item>
    </style>


    <style name="title_fragment">
        <item name="autoSizeTextType">uniform</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/dashbord_fragment_text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">16dp</item>

    </style>

    <style name="title">
        <item name="autoSizeTextType">uniform</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dashbord_fragment_hors_ligne</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="titre">
        <item name="autoSizeTextType">uniform</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="version">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_text_item_all_server_fragment</item>
    </style>
    <style name="credits">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_text_item_all_server_fragment</item>
    </style>
</resources>