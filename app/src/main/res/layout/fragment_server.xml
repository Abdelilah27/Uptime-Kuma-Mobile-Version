<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_all_server_fragment"
    tools:context=".views.server.ServerFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/server_title"
                style="@style/differente_size_title_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="ADM" />

            <TextView
                android:id="@+id/server_link"
                style="@style/link_server_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="http://admtrafic.ma/" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    style="@style/pause_button_different_size_server_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/pause_button_server_fragment"
                    app:cornerRadius="30dp"
                    app:icon="@drawable/ic_baseline_pause_24" />

                <Button
                    android:id="@+id/button2"
                    style="@style/delete_button_different_size_server_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/delete_button_server_fragment"
                    app:cornerRadius="30dp"
                    app:icon="@drawable/ic_baseline_delete_24" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background_item_all_server_fragment"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/graph_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="top"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_1"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_2"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_3"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_4"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_5"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_6"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_7"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_8"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_9"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_10"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_11"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_12"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_13"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_14"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_15"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_16"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_17"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_18"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_19"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/server_card_graph_20"
                            android:layout_width="8dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="4dp"
                            android:backgroundTint="@color/background_active_item_all_server_fragment"
                            app:cardCornerRadius="30dp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/status_verification_server_fragment"
                        style="@style/without_margin_title_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:text="@string/status_verification_server_fragment" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/background_active_item_all_server_fragment"
                        app:cardCornerRadius="30dp">

                        <TextView
                            style="@style/status_server_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/enLigne_status_server_fragment"
                            android:textColor="@color/white"></TextView>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/background_item_all_server_fragment"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView1"
                                style="@style/differente_size_title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/temps_reponse_server_fragment" />

                            <TextView
                                android:id="@+id/textView2"
                                style="@style/title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/temps_reponse_second_server_fragment" />

                            <TextView
                                android:id="@+id/textView3"
                                style="@style/differente_size_title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/temps_reponse_third_server_fragment" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView4"
                                style="@style/differente_size_title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/reponse_moyenne_server_fragment" />

                            <TextView
                                android:id="@+id/textView5"
                                style="@style/title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/reponse_moyenne_second_server_fragment" />

                            <TextView
                                android:id="@+id/textView6"
                                style="@style/differente_size_title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/reponse_moyenne_third_server_fragment" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView10"
                                style="@style/differente_size_title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/uptime_server_fragment" />

                            <TextView
                                android:id="@+id/textView11"
                                style="@style/title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/uptime_second_server_fragment" />

                            <TextView
                                android:id="@+id/textView12"
                                style="@style/differente_size_title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/uptime_third_server_fragment" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView13"
                                style="@style/differente_size_title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/second_uptime_server_fragment" />

                            <TextView
                                android:id="@+id/textView14"
                                style="@style/title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/second_uptime_second_server_fragment" />

                            <TextView
                                android:id="@+id/textView15"
                                style="@style/differente_size_title_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/second_uptime_third_server_fragment" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/background_item_all_server_fragment"
                app:cardCornerRadius="30dp">

                <com.androidplot.xy.XYPlot
                    android:id="@+id/graph_server_fragment"
                    style="@style/APDefacto.Dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundColor="@color/background_item_all_server_fragment"
                    app:rangeTitle="@string/range_graph_server_fragment">

                </com.androidplot.xy.XYPlot>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_server_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_color_Recycler_dashbord_fragment"
                    tools:listitem="@layout/dashbord_recylcer_item" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>